<h1 class="gallery-title">{{section.settings.heading}}</h1>


{%- comment -%}Or use {{forloop.index}} for incrementing
{%- endcomment -%}
{% assign nameNumber =1 %}
{% for block in section.blocks %}
    {%- if block.type == 'headline' -%}
        <h3 class="headline">{{block.settings.title}}</h3>
    {%- elsif block.type == 'QA' -%}
    <div class="faq">
        <div class="tab">
            <input type="checkbox" name="faq{{ nameNumber }}" id="faq{{ nameNumber }}" class="tab-toggle">
            <label for="faq{{ nameNumber }}" class="tab-label">{{block.settings.question}}</label>
            <div class="tab-content">{{block.settings.answer}}</div>
        </div>
    </div>
        {% assign nameNumber = nameNumber | plus: 1 %}
    {%- endif -%}
{% endfor %}


{% schema %}
{
    "name":"Customer Questions",
    "settings": [
        {
            "type": "text",
            "label": "Heading for FAQ",
            "id": "heading"
        }
    ],
    "blocks":[
        {
            "type": "QA",
            "name": "Question/Answer",
            "settings": [
                {
                    "type": "text",
                    "label": "Question label (internal only)",
                    "id": "title"
                },
                {
                    "type": "text",
                    "label": "Customer question",
                    "id": "question"
                },
                {
                    "type": "richtext",
                    "label": "Answer for FAQ",
                    "id": "answer"
                }
            ]
        },
        {
            "type": "headline",
            "name": "Headline",
            "settings": [
                {
                    "type": "text",
                    "label": "Headline",
                    "id": "title"
                }
            ]
        }
    ]
}
{% endschema %}